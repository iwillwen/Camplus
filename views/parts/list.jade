section.main
    each art in arts
        article
            header
                h2
                    a(href= art.url)= art.title
                span.tagline(style="float:right") Posted in 
                    a(href="/category/#{art.category}")= art.category
                    |  | 
                    a(href="#{art.url}#disqus_thread")
            != art.content
        br
script
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
